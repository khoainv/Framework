@using SSD.Web.UI.Html
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeadSection{
    <script src="@Url.Content("~/Scripts/MaskedInput/jquery.maskMoney-1.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MaskedInput/jquery.maskedinput-1.3.js")" type="text/javascript"></script>
    <script type="text/javascript">/*<![CDATA[*/// 
   jQuery(function($) {
      $.mask.definitions['~']='[+-]';
      $('#date').mask('99/99/9999');
      $('#phone').mask('(999) 999-9999');
      $('#phoneext').mask("(999) 999-9999? x99999");
      $("#tin").mask("99-9999999");
      $("#ssn").mask("999-99-9999");
      $("#product").mask("a*-999-a999",{placeholder:" ",completed:function(){alert("You typed the following: "+this.val());}});
      $("#eyescript").mask("~9.99 ~9.99 999");
   });
// ]]&gt;/*]]>*/</script>
<style type="text/css">
    .input-number{ text-align:right;}
</style>
}
<h2>
    Index</h2>
<h1>
    jQuery-maskMoney examples</h1>
<input id="demo1" type="text" class="input-number">
<script>    $("#demo1").maskMoney({ precision: 0 });</script>
<div>
    $("#demo1").maskMoney({precision:0});</div>
<input id="demo2" type="text">
<script>    $("#demo2").maskMoney({ thousands: '', decimal: '.' });</script>
<div>
    $("#demo2").maskMoney({{thousands:'', decimal:'.'}});</div>
<input id="demo3" type="text">
<script>    $("#demo3").maskMoney({ allowZero: false, allowNegative: true, defaultZero: false });</script>
<div>
    $("#demo3").maskMoney({allowZero:false, allowNegative:true, defaultZero:false});</div>
<input id="demo4" type="text">
<script>    $("#demo4").maskMoney({ symbol: 'R$ ', showSymbol: true, thousands: '.', decimal: ',', symbolStay: true });</script>
<div>
    $("#demo4").maskMoney({symbol:'R$ ', showSymbol:true, thousands:'.', decimal:',',
    symbolStay: true});</div>
<input id="demo5" value="1234567" type="text">
<script>    $("#demo5").maskMoney({ symbol: 'R$ ', showSymbol: true, thousands: '.', decimal: ',', symbolStay: true });</script>
<input onclick="$('#demo5').mask()" value="trigger mask event at demo5" type="button">
<div>
    $("#demo5").mask();</div>
<input id="demo6" type="text">
<script>    $("#demo6").maskMoney();</script>
<input onclick="$('#demo6').unmaskMoney()" value="remove maskmoney from demo6" type="button">
<div>
    $("#demo6").unmaskMoney();</div>

<div id="demo" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
    The following example is a demonstration from the usage tab.<table border="0">
        <tbody>
            <tr>
                <td>
                    Date
                </td>
                <td>
                    <input type="text" tabindex="1" id="date">
                </td>
                <td>
                    99/99/9999
                </td>
            </tr>
            <tr>
                <td>
                    Phone
                </td>
                <td>
                    <input type="text" tabindex="3" id="phone">
                </td>
                <td>
                    (999) 999-9999
                </td>
            </tr>
            <tr>
                <td>
                    Phone + Ext
                </td>
                <td>
                    <input type="text" tabindex="4" id="phoneext">
                </td>
                <td>
                    (999) 999-9999? x99999
                </td>
            </tr>
            <tr>
                <td>
                    Tax ID
                </td>
                <td>
                    <input type="text" tabindex="5" id="tin">
                </td>
                <td>
                    99-9999999
                </td>
            </tr>
            <tr>
                <td>
                    SSN
                </td>
                <td>
                    <input type="text" tabindex="6" id="ssn">
                </td>
                <td>
                    999-99-9999
                </td>
            </tr>
            <tr>
                <td>
                    Product Key
                </td>
                <td>
                    <input type="text" tabindex="7" id="product">
                </td>
                <td>
                    a*-999-a999
                </td>
            </tr>
            <tr>
                <td>
                    Eye Script
                </td>
                <td>
                    <input type="text" tabindex="8" id="eyescript">
                </td>
                <td>
                    ~9.99 ~9.99 999
                </td>
            </tr>
        </tbody>
    </table>
</div>
