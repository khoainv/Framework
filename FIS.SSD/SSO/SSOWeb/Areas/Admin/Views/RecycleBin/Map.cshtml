@model System.ComponentModel.BindingList<UG.BusinessEntities.RecycleBinMap>

@{
    ViewBag.Title = "Map";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<table class="table">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td>
                @Html.TextBoxFor(modelItem => modelItem[i].ID, new {style = "width:50px", @class = "form-control", @readonly = "true" })
            </td>
            <td>
                @Html.TextBoxFor(modelItem => modelItem[i].BizID, new { style = "width:300px", @class = "form-control", @readonly = "true" })
            </td>
            <td>
                @Html.TextBoxFor(modelItem => modelItem[i].BizName, new { style = "width:500px", @class = "form-control" })
            </td>
        </tr>
    }
    <tr>
        <td><input type="submit" value="Submit" /></td>
    </tr>
</table>
            }