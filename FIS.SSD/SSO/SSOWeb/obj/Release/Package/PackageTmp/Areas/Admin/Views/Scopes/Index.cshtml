@model IEnumerable<IdentityServer3.EntityFramework.Entities.Scope>

@{
    ViewBag.Title = "Scopes Manager";
}
<h4>@ViewBag.Title</h4>

<table style="width:100%">
    <tr>
        <td style="text-align:right">
            <p>
                @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-default" })
            </p>
        </td>
    </tr>
</table>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Enabled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Required)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Emphasize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IncludeAllClaimsForUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClaimsRule)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.ShowInDiscoveryDocument)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Enabled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Required)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Emphasize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IncludeAllClaimsForUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClaimsRule)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.ShowInDiscoveryDocument)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
